{% extends 'base.html.twig' %}
{% block body %}
    <div class="ui column doubling stackable grid container">
        <div class="column row"></div>
        <div class="column centered row">
            <div class="content">
                <h2 class="ui icon header">
                    <i class="yellow trophy icon"></i>
                    Welcome in The Great League Generator
                    <div class="sub header">The final table. Congratulations for the winner!</div>
                </h2>
            </div>
            <div class="ui divider"></div>
        </div>
    </div>
    <div class="ui column doubling stackable grid container">
        <div class="centered eight wide column">
            {% set position = 1 %}
            {% block scoretable %}
                <table class="ui small striped table">
                    <tr align="left">
                        <th>Position</th>
                        <th>Name</th>
                        <th>Points</th>
                        <th>Score</th>
                    </tr>
                    <tr align="left">
                        {% for player in scoreTable %}
                        <td> {{ position }} </td>
                        <td> {{ player.playerName }}</td>
                        <td> {{ player.points }} </td>
                        <td> {{ player.score }} </td>
                    </tr>
                    {% set position = position + 1 %}
                    {% endfor %}
                </table>
            {% endblock %}
            <button class="positive small ui button" type="button"
                    onclick="window.location='{{ url("welcome") }}'">
                <i class="undo icon"></i>
                Again?
            </button>
        </div>
    </div>
{% endblock %}
